@model IEnumerable<M7_Project_05.Models.Catagory>

@{
    ViewBag.Title = "Index";
}

<h5 class="offset-3 col-6 offset-3">All Catagory For Product Type</h5>

<p>
    @Html.ActionLink("Create New", "Create", new { },new { @class = "btn btn-outline-secondary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>         
            @Html.ActionLink("Edit", "Edit", new { id = item.CatagoryId }, new { @class = "btn btn-outline-secondary" })
            @Html.ActionLink("Delete", "Delete", new { id = item.CatagoryId }, new { @class = "btn btn-danger" })
            @Html.ActionLink("Type", "Type", "Catagory", new { id = item.CatagoryId }, new { @class = "btn btn-success" })
        </td>
    </tr>
}

</table>
