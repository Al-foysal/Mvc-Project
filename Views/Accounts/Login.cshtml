@model M7_Project_05.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{

    @Html.ValidationSummary()
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    <form>
                                        <div class="form-group row">
                                            @Html.LabelFor(x => x.Username, new { @class = "col-form-label col-3" })
                                            <div class="col-8">
                                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control flex" })
                                                @Html.ValidationMessageFor(x => x.Username, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <P class="text-info">PassWord First Letter Must be Capital</P>
                                        <div class="form-group row">
                                            @Html.LabelFor(x => x.Password, new { @class = "col-form-label col-3" })
                                            <div class="col-8">
                                                @Html.PasswordFor(x => x.Password, new { @class = "form-control mr-1" })
                                                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">

                                            <div class=" offset-8 col-4">
                                                <button type="submit" class="btn btn-primary">Log in</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small"><a href="@Url.Action("Register", "Accounts")">Need an account? Sign up!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

}

@section scripts {

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
