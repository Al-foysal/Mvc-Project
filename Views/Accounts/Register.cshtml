@model M7_Project_05.ViewModel.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Make Your Registration Here</h3></div>
                                <div class="card-body">
                                    <form>
                                        <div class="form-group row">
                                            @Html.LabelFor(x => x.Username, new { @class = "col-form-label col-4" })
                                            <div class="col-8">
                                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Username, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <p class="text-info">Password And Confirm PassWord First Letter Must Be Capital Letter</p>
                                        <div class="form-group row">
                                            @Html.LabelFor(x => x.Password, new { @class = "col-form-label col-4" })
                                            <div class="col-8">
                                                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-form-label col-4" })
                                            <div class="col-8">
                                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.ConfirmPassword, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">

                                            <div class="offset-8 col-4 mr-sm-0">
                                                <button type="submit" class="btn btn-primary">Create Account</button>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small"><a href="login.html">Have an account? Go to login</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
}

@section scripts {

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

